    /   = f.input :height, label: "chiều dài (cm)", :validate => true
    /   = f.file_field :images, onchange: "validateFiles(this);", class: "btn btn-success input-button", data: { max_file_size: 3.megabytes }, multiple: true, :validate => true
    /   = f.button :submit, value: "Đăng Sâm", class: "btn btn-success input-button"
